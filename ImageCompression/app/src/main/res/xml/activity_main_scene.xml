<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/guideline"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/original" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintGuide_percent="1"
            android:layout_width="wrap_content"
            android:id="@+id/guideline" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end2" >
        <Constraint
            android:id="@+id/guideline"
            motion:layout_constraintGuide_percent="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end2" >
        <OnClick motion:targetId="@+id/compressed" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end" >
        <OnClick motion:targetId="@+id/original" />
    </Transition>
</MotionScene>